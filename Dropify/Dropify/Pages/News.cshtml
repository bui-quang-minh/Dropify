                    </div>

                    <div class="col-lg-4 col-md-12 sidebar-right theiaStickySidebar">

                        <div class="card search-widget">
                            <div class="card-body">
                                <form class="search-form" method="post" asp-page="/News" asp-page-handler="Search">
                                    <div class="input-group">
                                    <input type="text" id="search_str" name="search_str" placeholder="Search..." class="form-control">
                                        <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i></button>
                                    </div>
                                </form>
                            </div>
                        </div>


                        <div class="card post-widget">
                            <div class="card-header">
                                <h4 class="card-title">Latest News</h4>
                            </div>
                        <div class="card-body">
                            <ul class="latest-posts">
                                @foreach (var ln in Model.LastestNews)
                                {
                                    <li>
                                        <div class="post-thumb">
                                            <a href="/Product/ProductDetail?productId=@ln.ProductId">
                                                <img class="img-fluid" src="@ln.ImgUrl" alt>
                                            </a>
                                        </div>
                                        <div class="post-info">
                                            <h4>
                                                <a href="/News?NewsId=@ln.NewsId">@ln.NewsContents.Substring(0, Math.Min(ln.NewsContents.Length, 50))@(ln.NewsContents.Length > 50 ? "..." : "")</a>
                                                @* <a href="blog-details.html">@Html.Raw(ln.NewsContents)</a> *@
                                            </h4>
                                            <p>@ln.CreatedDate</p>
                                        </div>
                                    </li>
                                }
                            </ul>
                        </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
