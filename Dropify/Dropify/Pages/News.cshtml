    </div>
    <div class="main-wrapper">
        <div class="breadcrumb-bar">
            <div class="container-fluid">
                <div class="row align-items-center">
                    <div class="col-md-12 col-12">
                        
                        <h2 class="breadcrumb-title">News</h2>
                    </div>
                </div>
            </div>
        </div>


        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-8 col-md-12">
                        <div class="row blog-grid-row">
                        @{
                            
                            foreach (var n in Model.ListNews)
                                {
                                <div class="col-md-6 col-sm-12">
                                    <div class="blog grid-blog">
                                        <div class="blog-image">
                                            <a href="/Product/ProductDetail?productId=@n.ProductId"><img class="img-fluid" src="@n.ImgUrl" alt="Post Image"></a>
                                        </div>
                                        <div class="blog-content">
                                            <ul class="entry-meta meta-item">
                                                <li>
                                                    <div class="post-author">
                                                        <a href="#"><img src="/assets/img/user/user1.jpg" alt="Post Author"> <span>@n.CreatedBy</span></a>
                                                    </div>
                                                </li>
                                                <li><i class="far fa-clock"></i>@n.CreatedDate</li>
                                            </ul>
                                            <h3 class="blog-title"><a href="/News?NewsId=@n.NewsId">The new about Product</a></h3>
                                            <p class="mb-0">@n.NewsContents.Substring(0, Math.Min(n.NewsContents.Length, 200))@(n.NewsContents.Length > 200 ? "..." : "")</p>
                                            <a href="/News?NewsId=@n.NewsId" style="color:blue">View more information >></a>
                                        </div>
                                    </div>
                                </div>
                                }
                            
                                if(Model.News != null)
                            {
                                <div class="col-md-6 col-sm-12">
                                    <div class="blog grid-blog">
                                        <div class="blog-image">
                                            <a href="/Product/ProductDetail?productId=@Model.News.ProductId"><img class="img-fluid" src="@Model.News.ImgUrl" alt="Post Image"></a>
                                        </div>
                                        <div class="blog-content">
                                            <ul class="entry-meta meta-item">
                                                <li>
                                                    <div class="post-author">
                                                        <a href="#"><img src="/assets/img/user/user1.jpg" alt="Post Author"> <span>@@Model.News.CreatedBy</span></a>
                                                    </div>
                                                </li>
                                                <li><i class="far fa-clock"></i>@Model.News.CreatedDate</li>
                                            </ul>
                                            <h3 class="blog-title"><a href="/News?NewsId=@Model.News.NewsId">The new about Product</a></h3>
                                            <p class="mb-0">@Model.News.NewsContents</p>
                                            
                                        </div>
                                    </div>
                                </div>
                            }
                        }

                    </div>

