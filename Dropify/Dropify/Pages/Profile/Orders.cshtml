@page
@model Dropify.Pages.Profile.OrdersModel
@{
    Layout = "_LayoutProfile";
}


    <div class="page-header">
        <div class="row">
            <div class="col-sm-12">
                <h3 class="page-title">Order</h3>
                <div class="card">
                    <div class="card-body">
                        <ul class="nav nav-tabs nav-tabs-bottom nav-justified">
                            <li class="nav-item">
                                <a class="nav-link active"
                                   href="#bottom-justified-tab" data-bs-toggle="tab">Ordered</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#bottom-justified-tab1"
                                   data-bs-toggle="tab">Success</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#bottom-justified-tab2"
                                   data-bs-toggle="tab">Canceled</a>
                            </li>


                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane show active" id="bottom-justified-tab">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="card">
                                            <div class="card-body">
                                                <div class="table-responsive">
                                                <table class="table table-hover mb-0">
                                                        <thead>
                                                            <tr>
                                                            <th width="150">Person</th>
                                                            <th width="100">Date</th>
                                                            <th width="100">Price</th>
                                                            
                                                            <th width="150">Address</th>
                                                            <th width="130">Ship Status</th>
                                                            <th class="text-center" width="200">Action</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @if (Model.OderedOrders != null)
                                                            {
                                                                @foreach (var o in Model.OderedOrders)
                                                                {
                                                                    <tr>                                                                       
                                                                        <td>
                                                                            @o.Ud.Name
                                                                        </td>
                                                                        <td>
                                                                            @o.OrderedDate
                                                                        </td>
                                                                        <td>
                                                                            <span class="price" style="font-weight:normal; font-size:medium">@o.OrderedPrice</span>
                                                                        </td>
                                                                        
                                                                        <td>
                                                                            @o.Address.Address
                                                                        </td>
                                                                        <td>
                                                                            @o.ShipStatus
                                                                        </td>
                                                                        

                                                                        <td class="text-center">
                                                                            <div class="actions">
                                                                                <a style="width:100%;margin-bottom:2px" href="OrderDetail?OrderId=@o.OrderId" class="btn btn-sm bg-warning-light">
                                                                                Detail
                                                                                </a>
                                                                            <a style="width:100%;" data-bs-toggle="modal" data-bs-target="#delete_modal" href="#delete_modal" data-id="@o.OrderId" class="btn btn-sm bg-danger-light">
                                                                                    <i class="fe fe-trash"></i> Cancel
                                                                                </a>
                                                                            </div>
                                                                        </td>
                                                                    </tr>
                                                                }
                                                            }
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane" id="bottom-justified-tab1">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="card">
                                            <div class="card-body">
                                                <div class="table-responsive">
                                                    <table class=" table table-hover mb-0">
                                                        <thead>
                                                            <tr>
