                                                            <th width="auto">Address</th>
                                                            <th width="130">Ship Status</th>
                                                            <th class="text-end">Action</th>

                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @if (Model.SuccessOrders != null)
                                                            {
                                                                @foreach (var o in Model.SuccessOrders)
                                                                {

                                                                    <tr>                                                                        
                                                                        <td>
                                                                            @o.Ud.Name
                                                                        </td>
                                                                        <td>
                                                                            @o.OrderedDate

                                                                        </td>

                                                                        <td>
                                                                            <span class="price" style="font-weight:normal; font-size:medium">@o.OrderedPrice</span>
                                                                        </td>
                                                                        
                                                                        <td>
                                                                            @o.Address.Address
                                                                        </td>

                                                                        <td>
                                                                            @o.ShipStatus
                                                                        </td>
                                                                        <td class="text-end">
                                                                            <div class="actions">
                                                                                <a href="OrderDetail?OrderId=@o.OrderId" class="btn btn-sm bg-warning-light">
                                                                                    Detail
                                                                                </a>
                                                                            </div>
                                                                        </td>
                                                                    </tr>
                                                                }
                                                            }
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane" id="bottom-justified-tab2">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="card">
                                            <div class="card-body">
                                                <div class="table-responsive">
                                                    <table class="  table table-hover mb-0">
                                                        <thead>
                                                            <tr>
                                                            <th width="150">Person</th>
                                                            <th width="100">Date</th>
                                                            <th width="100">Price</th>
                                                            
                                                            <th width="auto">Address</th>
                                                            <th width="130">Ship Status</th>
                                                            <th class="text-end">Action</th>

                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @if (Model.CanceledOrders != null)
                                                            {
                                                                @foreach (var o in Model.CanceledOrders)
                                                                {

                                                                    <tr>                                                                        
                                                                        <td>
                                                                            @o.Ud.Name
                                                                        </td>
                                                                        <td>
                                                                            @o.OrderedDate

                                                                        </td>

                                                                        <td>
                                                                            <span class="price" style="font-weight:normal; font-size:medium">@o.OrderedPrice</span>
                                                                        </td>
                                                                        
                                                                        <td>
                                                                            @o.Address.Address
                                                                        </td>

                                                                        <td>
                                                                            @o.ShipStatus
                                                                        </td>
                                                                        <td class="text-end">
                                                                            <div class="actions">
                                                                                <a href="OrderDetail?OrderId=@o.OrderId" class="btn btn-sm bg-warning-light">
                                                                                    Detail
                                                                                </a>
                                                                            </div>
                                                                        </td>

                                                                        </tr>
                                                                }
                                                            }

                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        
                
    </div>
    <div class="modal fade" id="delete_modal" role="" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">

                <div class="modal-body">
                    <form method="post" asp-page="/Profile/Orders" asp-page-handler="Delete">
                        <div class="form-content p-2">
                            <h4 class="modal-title">Delete</h4>
                            <p class="mb-4">Are you sure want to delete?</p>
                            <button type="submit" id="MyLink" class="btn btn-primary">Delete </button>
                            <input type="hidden" value="" id="o_id" name="o_id" />
                            <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
     
            
            
        


    

