@page
@model AddProductModel
@{
    Layout = "_AdminLayout";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Mentoring</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">

    <link rel="shortcut icon" type="image/x-icon" href="/assets/img/favicon.png">

    <link rel="stylesheet" href="/assets/css/bootstrap.min.css">

    <link rel="stylesheet" href="/assets/plugins/fontawesome/css/fontawesome.min.css">
    <link rel="stylesheet" href="/assets/plugins/fontawesome/css/all.min.css">

    <link rel="stylesheet" href="/assets/plugins/select2/css/select2.min.css">
    <link rel="stylesheet" href="/assets/css/style.css">
</head>
<body>
    <div class="main-wrapper">
        <div class="page-wrapper">
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-7 col-lg-8 col-xl-9 custom-edit-service">
                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-body">
                                        <h3 class="pb-3">Add Product</h3>
                                    <form asp-page="/Admin/Products/AddProduct" asp-page-handler="Add" enctype="multipart/form-data">
                                            <div class="service-fields mb-3">
                                                <h4 class="heading-2">Product Information</h4>
                                                <div class="row">
                                                    <div class="col-lg-12">
                                                        <div class="form-group">
                                                            <label>Product Title <span class="text-danger">*</span></label>
                                                            <input class="form-control" name="productName" type="text" placeholder="Enter product name ...">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="service-fields mb-3">
                                                <h4 class="heading-2">Product Category</h4>
                                                <div class="row">
                                                    <div class="col-lg-6">
                                                        <div class="form-group">
                                                            <label>Category <span class="text-danger">*</span></label>
                                                            <select class="form-control select form-select" name="category">
                                                            @foreach (var item in Model.availableCategory)
                                                                {
                                                                    <option value="@item.CategoryId">@item.CategoryName</option>
                                                                }
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        <div class="service-fields mb-3">
                                            <h4 class="heading-2">Product Supplier</h4>
                                            <div class="row">
                                                <div class="col-lg-6">
                                                    <div class="form-group">
                                                        <label>Supplier <span class="text-danger">*</span></label>
                                                        <select class="form-control select form-select" name="supplier">
                                                            @foreach (var item in Model.suppliers)
                                                            {
                                                                <option value="@item.SupplierId">@item.SupplierName</option>
                                                            }
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="service-fields mb-3">
                                            <h4 class="heading-2">Product Color</h4>
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <div class="form-group">
                                                        <label>Color (Optional)</label><label style="color:gray">- each seperated by a semicolon ";".</label>
                                                        <input class="form-control" name="color" type="text" placeholder="Enter color...">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="service-fields mb-3">
                                            <h4 class="heading-2">Product Size</h4>
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <div class="form-group">
                                                        <label>Size (Optional)</label><label style="color:gray">- each seperated by a semicolon ";".</label>
                                                        <input class="form-control" name="size" type="text" placeholder="Enter size...">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="service-fields mb-3">
                                            <h4 class="heading-2">Product Options</h4>
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <div class="form-group">
                                                        <label>Options (Optional)</label><label style="color:gray">- each seperated by a semicolon ";".</label>
                                                        <input class="form-control" name="options" type="text" placeholder="Enter Options...">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                            <div class="service-fields mb-3">
                                                <h4 class="heading-2">Product Details</h4>
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <div class="form-group">
                                                        <label>Product Original Price <span class="text-danger">*</span></label>
                                                        <input class="form-control" name="originalPrice" type="text" placeholder="Enter product original price ...">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <div class="form-group">
                                                        <label>Product Sell Out Price <span class="text-danger">*</span></label>
                                                        <input class="form-control" name="sellOutPrice" type="text" placeholder="Enter product sell out price ...">
                                                    </div>
                                                </div>
                                            </div>
                                            
                                                <div class="row">
                                                    <div class="col-lg-12">
                                                        <div class="form-group">
                                                            <label>Descriptions <span class="text-danger">*</span></label>
                                                            <textarea id="tiny" class="form-control service-desc" name="description" placeholder="Enter description..."></textarea>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        
                                            <div class="service-fields mb-3">
                                            <h4 class="heading-2">Product Images </h4> <label style="color:gray">- First picture will be used as thumbnail.</label>
                                                <div class="row">
                                                    <div class="col-lg-12">
                                                        <div class="service-upload">
                                                            <i class="fas fa-cloud-upload-alt"></i>
                                                            <span>Upload Service Images *</span>
                                                            <input type="file" name="images" id="images" multiple>
                                                        </div>
                                                        <div id="uploadPreview">
                                                            <ul class="upload-wrap">
                                                                <li>
                                                                    <div class="upload-images">
                                                                        <img alt src="/assets/img/blog/blog-thumb-01.jpg">
                                                                    </div>
                                                                </li>
                                                                <li>
                                                                    <div class="upload-images">
                                                                        <img alt src="/assets/img/blog/blog-thumb-02.jpg">
                                                                    </div>
                                                                </li>
                                                                <li>
                                                                    <div class="upload-images">
                                                                        <img alt src="/assets/img/blog/blog-thumb-03.jpg">
                                                                    </div>
                                                                </li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="submit-section">
                                                <button class="btn btn-primary submit-btn" type="submit" name="form_submit" value="submit">Submit</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.tiny.cloud/1/maenzonb9r1k0ddnbs3crfqerq8tdye7rxtvk6g882c6ie8l/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
    <script>
        tinymce.init({
            selector: 'textarea#tiny',
                    plugins: [
                'a11ychecker', 'advlist', 'advcode', 'advtable', 'autolink', 'checklist', 'export',
                'lists', 'link', 'image', 'charmap', 'preview', 'anchor', 'searchreplace', 'visualblocks',
                'powerpaste', 'fullscreen', 'formatpainter', 'insertdatetime', 'media', 'table', 'help', 'wordcount'
            ],
            toolbar: 'undo redo | a11ycheck casechange blocks | bold italic backcolor | alignleft aligncenter alignright alignjustify |' +
                'bullist numlist checklist outdent indent | removeformat | code table help'
        })
    </script>
    <script data-cfasync="false" src="../../cdn-cgi/scripts/5c5dd728/cloudflare-static/email-decode.min.js"></script>
    <script src="/assets/js/jquery-3.6.0.min.js"></script>

    <script src="/assets/js/bootstrap.bundle.min.js"></script>

    <script src="/assets/plugins/select2/js/select2.min.js"></script>

    <script src="/assets/plugins/theia-sticky-sidebar/ResizeSensor.js"></script>
    <script src="/assets/plugins/theia-sticky-sidebar/theia-sticky-sidebar.js"></script>

    <script src="/assets/js/script.js"></script>
</body>

