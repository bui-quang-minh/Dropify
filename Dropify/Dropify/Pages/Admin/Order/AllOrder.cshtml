    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Get modal and link elements
            var modal = document.getElementById('edit_modal');
            var links = document.querySelectorAll('[data-bs-target="#edit_modal"]');

            // Add event listener for when any of the links is clicked
            links.forEach(function (link) {
                link.addEventListener('click', function () {
                    // Extract data from the clicked link
                    var productId = link.dataset.id;
                    var Name = link.dataset.name;
                    var orPrice = link.dataset.oprice;
                    var supplier = link.dataset.supp;
                    var Category = link.dataset.cate;
                    var soPrice = link.dataset.sprice;
                    var createDate = link.dataset.create;
                    var startDate = link.dataset.start;
                    var endDate = link.dataset.end;
                    var shipDate = link.dataset.ship;
                    var Status = link.dataset.status;

                    var create = formatDate(createDate);
                    var start = formatDate(startDate);
                    var end = formatDate(endDate);
                    var ship = formatDate(shipDate);

                    function formatDate(d) {
                        var part = d.split(/[\/ :]/);
                        var formaterDate = part[2] + '-' + part[1] + '-' + part[0];
                        return formaterDate;

                    }
                 
                   
                    // Update modal content with the extracted values
                    
                    document.getElementById('edit_id').value = productId;
                    document.getElementById('productName').value = Name;
                    document.getElementById('categories').value = Category;
                    document.getElementById('oPrice').value = orPrice;
                    document.getElementById('sPrice').value = soPrice;
                    document.getElementById('supplier').value = supplier;
                    //modal.querySelector('#imageproduct1').src = productImage;
                    
                    document.getElementById('createDate').value = create;
                    document.getElementById('startDate').value = start;
                    document.getElementById('endDate').value = end;
                    
                    document.getElementById('shipDate').value = ship;
                   
                    document.getElementById('pStatus').value = Status;
                   

                });
            });
        });
    </script>
    <script>
        var maxLength = 50;
        var elements = document.querySelectorAll('.limitedText');
        elements.forEach(function (element) {
            if (element.textContent.length > maxLength) {
                element.textContent = element.textContent.substring(0, maxLength) + '...';
            }

        });
    </script>

    <script>
        var moneys = document.querySelectorAll('.price');
        moneys.forEach(function (money) {
            // Lấy giá trị số từ phần tử HTML
            var amountString = money.textContent.replace(/[^\d,-]/g, ''); // Loại bỏ các ký tự không phải số, dấu phẩy hoặc dấu trừ
            var amount = parseFloat(amountString.replace(',', '.')); // Chuyển đổi dấu phẩy sang dấu chấm cho số dấu phẩy động
            var formattedMoney = amount.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' });
            money.textContent = formattedMoney; // Gán giá trị đã định dạng vào phần tử HTML
           
        });

    </script>
