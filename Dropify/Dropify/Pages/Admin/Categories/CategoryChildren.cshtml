    <div class="main-wrapper">

        <div class="page-wrapper">
            <div class="content container-fluid">
                <div class="page-header">
                    <div class="row">
                        <div class="col-sm-6">
                            <h3 class="page-title">@Model.category.CategoryName</h3>
                        </div>


                    </div>
                </div>

                <div class="col">
                    <a class="btn btn-success" data-bs-toggle="modal" href="#add_modal">
                        <i class="fe fe-plus"></i>
                        New Category
                    </a>
                </div>
                <br />

               
                
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="datatable table table-hover table-center mb-0">
                                        <thead>
                                            <tr>
                                                <th width="100">CategoryID</th>
                                                <th width="300">Name</th>
                                                <th width="300" class="text-center">Status</th>
                                                <th width="300" class="text-center">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model.categories != null)
                                            {
                                                @foreach (var c in Model.categories)
                                                {

                                                    <tr>
                                                        <td>
                                                            @c.CategoryId
                                                        </td>
                                                        <td>
                                                            <span class="limitedText">@c.CategoryName</span>
                                                        </td>

                                                        @if (c.Status != null &&  c.Status.Equals("Active"))
                                                        {
                                                            <td class="text-center">
                                                                <span class="badge badge-pill bg-success inv-badge">@c.Status</span>
                                                            </td>
                                                        }
                                                        @if (c.Status != null &&  c.Status.Equals("Inactive"))
                                                        {
                                                            <td class="text-center">
                                                                <span class="badge badge-pill bg-secondary inv-badge">@c.Status</span>
                                                            </td>
                                                        }
                                                        @if (c.Status == null)
                                                        {
                                                            <td class="text-center">
                                                                <span class="badge badge-pill bg-danger inv-badge">Null</span>
                                                            </td>
                                                        }


                                                        <td class="text-center">
                                                            <div class="actions">
                                                                <a class="btn btn-sm bg-success-light" data-bs-toggle="modal" data-id="@c.CategoryId"
                                                                  data-name="@c.CategoryName" 
                                                                 data-status="@c.Status"
                                                                 data-date="@c.ChangedDate"
                                                                   data-bs-target="#edit_modal" href="#edit_modal">
                                                                    <i class="fe fe-pencil"></i> Edit
                                                                </a>
                                                                <a data-bs-toggle="modal" data-bs-target="#delete_modal" href="#delete_modal" data-did="@c.CategoryId" class="btn btn-sm bg-danger-light">
                                                                    <i class="fe fe-trash"></i> Delete
                                                                </a>
                                                              
                                                               
                                                            </div>
                                                        </td>
                                                    </tr>

                                                }
                                            }

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
